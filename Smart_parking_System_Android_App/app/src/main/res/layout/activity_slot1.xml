<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shree.btechproject.Slot1">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:text="DATE:"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter date here"
        android:ems="10"
        android:id="@+id/tv"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="219dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="TIME:"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_below="@+id/tv1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="DURATION:"
        android:layout_below="@+id/tv2"
        tools:layout_editor_absoluteY="36dp"
        tools:layout_editor_absoluteX="0dp"
        android:layout_alignEnd="@+id/tv1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:hint="Enter Time Here:"
        android:id="@+id/tv3"
        android:layout_below="@+id/tv"
        android:layout_alignLeft="@+id/tv"
        android:layout_alignStart="@+id/tv"
        tools:layout_editor_absoluteY="19dp"
        tools:layout_editor_absoluteX="219dp" />
    <Spinner
        android:layout_width="157dp"
        android:layout_height="19dp"
        android:id="@+id/spn"
        android:layout_row="8"
        android:layout_column="12"
        tools:layout_editor_absoluteY="33dp"
        tools:layout_editor_absoluteX="219dp"
        android:layout_alignBottom="@+id/tv4"
        android:layout_alignStart="@+id/tv3" />

    <Button
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/but9"
        tools:layout_editor_absoluteY="71dp"
        tools:layout_editor_absoluteX="148dp"
        android:layout_above="@+id/gridLayout"
        android:layout_alignStart="@+id/spn"
        android:layout_marginStart="32dp" />

    <GridLayout
        android:layout_width="386dp"
        android:layout_height="388dp"
        android:background="@drawable/road"
        tools:layout_editor_absoluteY="119dp"
        tools:layout_editor_absoluteX="-6dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/spn"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area1"
            android:id="@+id/but10"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area2"
            android:id="@+id/but11"
            android:layout_row="0"
            android:layout_column="13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area3"
            android:id="@+id/but12"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area4"
            android:id="@+id/but13"
            android:layout_row="1"
            android:layout_column="13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area5"
            android:id="@+id/but14"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area6"
            android:id="@+id/but15"
            android:layout_row="2"
            android:layout_column="13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area7"
            android:id="@+id/but16"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area8"
            android:id="@+id/but17"
            android:layout_row="3"
            android:layout_column="13" />




    </GridLayout>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slot Number"
        android:layout_alignBaseline="@+id/but9"
        android:layout_alignBottom="@+id/but9"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv4"
        android:text="TextView" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
